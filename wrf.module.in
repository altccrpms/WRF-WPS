#%Module 1.0
#
#  wrf module for use with 'environment-modules' package:
#
conflict	wrf
module load	mpi/@MPI@-@CC@
# Use serial netcdf for now
module load	netcdf-fortran/@CC@

prepend-path 	PATH 		@PREFIX@/bin

setenv		WRF_DIR		@PREFIX@

# Intel version at least needs large stacks
if { [ module-info mode load ] } {
    if { [module-info shelltype sh] } {
        puts "ulimit -s unlimited;"
    } elseif { [module-info shelltype csh] } {
        puts "limit stacksize unlimited;"
    }
}
